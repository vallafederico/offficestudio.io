---
import Section from "../Section.astro";
---

<Section className="Hero h-[88vh] mt-[20vh] lg:mt-0">
  <div class="c md:text-[15vw] text-[13vw] uppercase leading-[.8em]">
    <div class="md:flex inline">
      <p data-a="char">Office For</p>
    </div>
    <div class="inline md:flex items-center justify-between">
      <p data-a="char">Future</p>
      <p
        data-a="word"
        class="text-xs max-w-[40ch] lg:block hidden leading-[1em]"
        data-layer="top"
      >
        <i> FUTURE</i> LIVING <b> DESIGN</b> RESEARCH STUDIO. INSTALLATIONS, COMMERCIAL
        AND PRIVATE SPACES.
      </p>
      <p data-a="word" class="text-xs max-w-[40ch] lg:block hidden">
        IT / US / AG
      </p>
    </div>
    <div class="md:flex">
      <p data-a="char">Furnishing.</p>
    </div>
    <div class="lg:hidden flex justify-between items-end my-8">
      <p
        data-a="word"
        class="text-xs max-w-[30ch] leading-[1em]"
        data-layer="top"
      >
        <i> FUTURE</i> LIVING <b> DESIGN</b> RESEARCH STUDIO. INSTALLATIONS, COMMERCIAL
        AND PRIVATE SPACES.
      </p>
      <p data-a="word" class="text-xs max-w-[40ch]">IT / US / AG</p>
    </div>
  </div>
</Section>
